{
  "name": "website",
  "version": "2.0.0",
  "description": "Kirby powered website for Das Habitat Augsburg e.V.",
  "main": "index.js",
  "repository": "https://github.com/das-habitat/website",
  "author": "Florian Pichler for Das Habitat Augsburg e.V.",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "gulp",
    "composer": "cd kirby && composer",
    "lint": "npm-run-all -p -c \"lint:!(fix)\"",
    "lint:php": "prettier \"**/*.php\" --check",
    "lint:css": "prettier \"**/*.php\" --check",
    "lint:js": "prettier \"**/*.php\" --check",
    "lint:fix": "npm-run-all -p -c \"lint:*:fix\"",
    "lint:php:fix": "prettier \"**/*.php\" --write",
    "lint:css:fix": "prettier \"**/*.php\" --write",
    "lint:js:fix": "prettier \"**/*.php\" --write",
    "gulp": "gulp",
    "kirby": "cd kirby && php -S 127.0.0.1:8000 kirby/router.php",
    "kirby:win": "cd .\\kirby && php -S 127.0.0.1:8000 .\\kirby\\router.php",
    "build": "gulp build"
  },
  "devDependencies": {
    "@babel/core": "~7.14.3",
    "@babel/preset-env": "~7.14.4",
    "@babel/register": "~7.13.16",
    "@prettier/plugin-php": "~0.16.3",
    "@rollup/plugin-commonjs": "~19.0.0",
    "@rollup/plugin-node-resolve": "~13.0.0",
    "autoprefixer": "~10.2.6",
    "browser-sync": "~2.26.14",
    "cross-env": "~7.0.3",
    "cssnano": "~5.0.5",
    "fibers": "~5.0.0",
    "gulp": "~4.0.2",
    "gulp-cli": "~2.3.0",
    "gulp-postcss": "~9.0.0",
    "gulp-sass": "~4.1.0",
    "gulp-sourcemaps": "~3.0.0",
    "instant.page": "~5.1.0",
    "normalize.css": "~8.0.1",
    "npm-run-all": "~4.1.5",
    "postcss": "~8.3.0",
    "postcss-inline-svg": "~5.0.0",
    "prettier": "~2.3.1",
    "rimraf": "~3.0.2",
    "rollup": "~2.51.0",
    "rollup-plugin-terser": "~7.0.2",
    "sass": "~1.34.1"
  },
  "volta": {
    "node": "14.16.0"
  },
  "dependencies": {
    "@splidejs/splide": "~2.4.21"
  }
}
